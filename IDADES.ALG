Algoritmo "Idades"

Var
   nome1  : caractere
   nome2  : caractere
   idade1 : Inteiro
   idade2 : Inteiro
   media : real

Inicio
   escreval("Dados da primeira pessoa: ")
   escreva("Nome: ")
   leia(nome1)
   escreva("Idade: ")
   leia(idade1)
   
   escreval("Dados da segunda pessoa: ")
   escreva("Nome: ")
   leia(nome2)
   escreva("Idade: ")
   leia(idade2)
   
   media <- (idade1 + idade2) / 2
   escreva("A idade média de ", nome1 , " e ", nome2, " eh de ", media, " anos")

Fimalgoritmo